<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:minWidth="480dp"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_user"
        android:textSize="@dimen/heading2"
        android:layout_marginLeft="@dimen/control_vertical_margin_medium"
        android:layout_marginTop="@dimen/control_vertical_margin_medium"
        android:textStyle="bold"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/control_vertical_margin_small"
        android:layout_marginEnd="@dimen/control_vertical_margin_small"
        android:layout_marginLeft="@dimen/control_vertical_margin_small"
        android:layout_marginRight="@dimen/control_vertical_margin_small">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/new_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/control_vertical_margin_small"
        android:layout_marginEnd="@dimen/control_vertical_margin_small"
        android:layout_marginLeft="@dimen/control_vertical_margin_small"
        android:layout_marginRight="@dimen/control_vertical_margin_small"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/new_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_email"/>
    </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_add_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/control_vertical_margin_medium"
            android:layout_gravity="end"
            android:text="@string/add"
            android:layout_marginRight="@dimen/activity_horizontal_margin" />
</LinearLayout>