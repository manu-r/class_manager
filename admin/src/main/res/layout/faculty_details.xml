<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/control_vertical_margin_high"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TableRow
        android:layout_marginBottom="@dimen/control_vertical_margin_small">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="4">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_user_default"
                android:layout_marginEnd="@dimen/control_vertical_margin_small"
                android:layout_marginRight="@dimen/control_vertical_margin_small" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/user_icon"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/faculty_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/heading3"
                    android:textStyle="bold"
                    android:text="John Doe"
                    android:layout_marginBottom="@dimen/control_vertical_margin_xsmall"
                    />

                <TextView
                    android:id="@+id/contact_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9876543210"
                    android:layout_below="@+id/faculty_name"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="@dimen/control_vertical_margin_high"
                android:layout_below="@+id/user_icon"
                android:background="@color/lightGray"/>
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/control_vertical_margin_small">


        <TextView
            android:id="@+id/session_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="4"
            android:text="Session"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/session_details"
        android:layout_marginBottom="@dimen/control_vertical_margin_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/session_start_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/control_vertical_margin_high"
            android:text="@string/start"
            android:textSize="@dimen/sub_section_font"
            android:paddingRight="@dimen/control_vertical_margin_high" />

        <TextView
            android:id="@+id/session_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/control_vertical_margin_high"
            android:text="@string/sample_time"
            android:textSize="@dimen/sub_section_font"
            android:paddingRight="@dimen/control_vertical_margin_high" />

        <TextView
            android:id="@+id/session_end_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/control_vertical_margin_high"
            android:text="@string/end"
            android:textSize="@dimen/sub_section_font"
            android:paddingRight="@dimen/control_vertical_margin_high" />

        <TextView
            android:id="@+id/session_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="75dp"
            android:text="@string/sample_time"
            android:textSize="@dimen/sub_section_font" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="@dimen/control_vertical_margin_small">
        <TextView
            android:id="@+id/cab_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cab"
            android:textStyle="bold"
            android:layout_span="4"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="@dimen/control_vertical_margin_small"
        android:id="@+id/cab_time_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/session_details">



        <TextView
            android:id="@+id/pickup_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cab_heading"
            android:text="@string/pickup"
            android:textSize="@dimen/sub_section_font" />

        <TextView
            android:id="@+id/cab_pickup_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_time"
            android:textSize="@dimen/sub_section_font" />

        <TextView
            android:id="@+id/return_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_label"
            android:textSize="@dimen/sub_section_font" />

        <TextView
            android:id="@+id/cab_return_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_time"
            android:textSize="@dimen/sub_section_font" />
    </TableRow>
<TableRow
    android:layout_marginBottom="@dimen/control_vertical_margin_small">

    <TextView
        android:id="@+id/location_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textStyle="bold"
        android:layout_span="4"/>
</TableRow>

    <TableRow
        android:layout_marginBottom="@dimen/control_vertical_margin_small"
        android:id="@+id/cab_location_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cab_time_details">


        <TextView
            android:id="@+id/pickup_loc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_heading"
            android:text="@string/pickup"
            android:textSize="@dimen/sub_section_font" />

        <TextView
            android:id="@+id/cab_pickup_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_loc"
            android:maxWidth="@dimen/max_loc_width"
            android:textSize="@dimen/sub_section_font" />

        <TextView
            android:id="@+id/drop_loc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_label"
            android:textSize="@dimen/sub_section_font" />

        <TextView
            android:id="@+id/cab_drop_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/max_loc_width"
            android:text="@string/sample_loc"
            android:textSize="@dimen/sub_section_font" />

    </TableRow>
</TableLayout>