<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/control_vertical_margin_small"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_user_default"
        android:layout_marginLeft="@dimen/control_vertical_margin_small"
        android:layout_marginStart="@dimen/control_vertical_margin_small"
        android:layout_marginEnd="@dimen/control_vertical_margin_small"
        android:layout_marginRight="@dimen/control_vertical_margin_small"
        android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_icon"
            android:layout_centerVertical="true">


            <TextView
                android:id="@+id/faculty_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/heading3"
                android:textStyle="bold"
                android:text="John Doe"
                />

            <TextView
                android:id="@+id/contact_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sub_section_font"
                android:text="9876543210"
                android:layout_below="@+id/faculty_name"
                />
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="@dimen/control_vertical_margin_high"
        android:layout_below="@+id/user_icon"
        android:background="@color/lightGray"/>
</RelativeLayout>