<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.SocialLoginButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:height">50dp</item>
        <item name="android:width">125dp</item>
    </style>

    <style name="AppTheme.FacebookLoginButton" parent="AppTheme.SocialLoginButton">
        <item name="android:colorButtonNormal">@color/facebookButton</item>
        <item name="android:drawableLeft">@drawable/com_facebook_button_icon_white</item>
        <item name="android:drawableStart">@drawable/com_facebook_button_icon_white</item>
        <item name="android:text">@string/login_with_facebook</item>
    </style>

    <style name="AppTheme.GoogleLoginButton" parent="AppTheme.SocialLoginButton">
        <item name="android:colorButtonNormal">@color/googleButton</item>
        <item name="android:drawableLeft">@drawable/google_icon</item>
        <item name="android:drawableStart">@drawable/google_icon</item>
        <item name="android:text">@string/login_with_google</item>
    </style>
</resources>